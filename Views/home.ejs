<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome Back!</title>
    <style>
        /* Style for header */
        header {
            background-color: #333;
            color: white;
            padding: 10px;
            text-align: center;
        }
        header button {
            background-color: #555;
            color: white;
            padding: 5px 10px;
            margin: 0 10px;
            border: none;
            cursor: pointer;
        }
        /* Style for announcements */
        .announcements {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: #f00; /* Red background color */
            color: white;
            padding: 10px;
            border-radius: 10px;
            max-width: 300px; /* Limit width to prevent overflowing */
            overflow-y: auto; /* Enable vertical scrolling if content overflows */
            height: calc(100vh - 100px); /* Set max height to viewport height minus header height and some padding */
        }
    </style>
</head>
<body>
    <header>
        <form action="/home/profile" method="get">
            <button type="submit">Profile</button>
        </form>
        <form action="/volunteer" method="get">
            <button type="submit">Volunteer</button>
        </form>
        <form action="/logout" method="get">
            <button type="submit">Logout</button>
        </form>
    </header>

    <div class="announcements">
        <h2>Announcements</h2>
        <% if (Array.isArray(announcements) && announcements.length > 0) { %>
            <% announcements.forEach(announcement => { %>
                <div><%= announcement.Description %></div>
            <% }); %>
        <% } else { %>
            <div>No announcements available.</div>
        <% } %>
    </div>
    


    <h1>Welcome Back! This is gonna be an amazing farewell Experience.</h1>
    <form action="/DinnerMenu" method="get">
        <button type="submit">Dinner Menu</button>
    </form>
    <form action="/proposals" method="get">
        <button type="submit">Performance Proposal</button>
    </form>
</body>
</html>
