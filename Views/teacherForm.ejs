<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Registration</title>
    <style>
        .hidden {
            display: none;
        }
    </style>
</head>
<body>
    <h1>Teacher Registration Form</h1>
    <form action="/teacherForm" method="post">
        <div>
            <label for="name">Full Name:</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div>
            <label for="department">Department:</label>
            <select id="department" name="department" required>
                <option value="">Select Department</option>
                <option value="AI">Artificial Intelligence (AI)</option>
                <option value="CS">Computer Science (CS)</option>
                <option value="SE">Software Engineering (SE)</option>
                <option value="DS">Data Science (DS)</option>
            </select>
        </div>
        <div>
            <label for="dietary_preferences">Dietary Preferences:</label>
            <input type="text" id="dietary_preferences" name="dietary_preferences">
        </div>
        <div>
            <label for="registration_status">Registration Status:</label>
            <select id="registration_status" name="registration_status">
                <option value="coming">Coming</option>
                <option value="not_coming">Not Coming</option>
            </select>
        </div>
        <div>
            <label for="family_members">Number of Family Members:</label>
            <select id="family_members" name="family_members">
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </div>
        <div id="family_details" class="hidden">
            <!-- Family details input fields will be inserted here based on selection -->
        </div>
        <input type="hidden" name="userType" value="teacher">
        <button type="submit">SUBMIT</button>
    </form>

    <script>
        document.getElementById('family_members').addEventListener('change', function() {
            var numFamilyMembers = parseInt(this.value);
            var familyDetailsDiv = document.getElementById('family_details');
            familyDetailsDiv.innerHTML = ''; // Clear previous fields

            if (numFamilyMembers > 0) {
                familyDetailsDiv.classList.remove('hidden');
            } else {
                familyDetailsDiv.classList.add('hidden');
            }

            for (var i = 0; i < numFamilyMembers; i++) {
                var familyMemberDiv = document.createElement('div');
                familyMemberDiv.innerHTML = '<label for="family_member_' + (i + 1) + '_name">Family Member ' + (i + 1) + ' Name:</label>' +
                    '<input type="text" id="family_member_' + (i + 1) + 'name" name="family_member' + (i + 1) + '_name">' +
                    '<label for="family_member_' + (i + 1) + '_contact">Family Member ' + (i + 1) + ' Contact:</label>' +
                    '<input type="text" id="family_member_' + (i + 1) + 'contact" name="family_member' + (i + 1) + '_contact">' +
                    '<label for="family_member_' + (i + 1) + '_cnic">Family Member ' + (i + 1) + ' CNIC:</label>' +
                    '<input type="text" id="family_member_' + (i + 1) + 'cnic" name="family_member' + (i + 1) + '_cnic">';
                familyDetailsDiv.appendChild(familyMemberDiv);
            }
        });
    </script> 
</body>
</html>