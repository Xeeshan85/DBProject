<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteer for Tasks</title>
</head>
<body>
    <h1>Volunteer for Tasks</h1>
    <form action="/submit-volunteer" method="post">
        <% if (Array.isArray(taskResults)) { %> <!-- Check if taskData is an array -->
            <ul>
                <% taskResults.forEach(task => { %>
                    <li>
                        <input type="checkbox" name="tasks[]" value="<%= task.TaskId %>">
                        <label for="<%= task.TaskId %>"><%= task.Name %> - <%= task.Description %></label>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No tasks found</p>
        <% } %>
        
        <button type="submit">Volunteer</button>
    </form>
</body>
</html>
