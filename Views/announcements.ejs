<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Announcements</title>
    <style>
        /* Add your CSS styles here */
        .card {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            margin: 10px;
            width: 300px;
        }
        .form-container {
            margin-top: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            width: 300px;
        }
        form {
            display: flex;
            flex-direction: column;
        }
        input[type="submit"] {
            margin-top: 10px;
            padding: 5px 10px;
            background-color: #4CAF50; 
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        header {
            background-color: #333;
            color: white;
            padding: 10px;
            text-align: center;
        }
        header button {
            background-color: #555;
            color: white;
            padding: 5px 10px;
            margin: 0 10px;
            border: none;
            cursor: pointer;
        }
        /* Style for hovering division */
        .farewell-registration {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #ddd;
            padding: 20px;
            border-radius: 10px;
            display: none;
        }
        .farewell-registration:hover {
            display: block;
        }
    </style>
    <header>
        <form action="/adminHome" method="get">
            <button type="submit">Home</button>
        </form>
    </header>
</head>
<body>
    <h1>Announcements</h1>
    <% announcements.forEach(announcement => { %>
        <div class="card">
            <p><%= announcement.Description %></p>
        </div>
    <% }); %>

    <div class="form-container">
        <h2>Add New Announcement</h2>
        <form action="/addAnnouncement" method="post">
            <textarea name="description" rows="3" placeholder="Enter announcement description"></textarea>
            <input type="submit" value="Add Announcement">
        </form>
    </div>
</body>
</html>
