    <script>
        function validateForm() {
            var numFamilyMembers = parseInt(document.getElementById('family_members').value);
            for (var i = 1; i <= numFamilyMembers; i++) {
                var nameField = document.getElementById('family_member_' + i + '_name');
                var contactField = document.getElementById('family_member_' + i + '_contact');
                var cnicField = document.getElementById('family_member_' + i + '_cnic');
                
                if (!nameField.value || !isNaN(parseFloat(nameField.value))) {
                    alert("Family Member " + i + " Name should be non-numeric");
                    return false;
                }
                
                if (!contactField.value || isNaN(parseInt(contactField.value)) || contactField.value.length !== 11) {
                    alert("Family Member " + i + " Contact should be a numeric value of 11 digits");
                    return false;
                }

                if (!cnicField.value || isNaN(parseInt(cnicField.value)) || cnicField.value.length !== 13) {
                    alert("Family Member " + i + " CNIC should be a numeric value of 13 digits");
                    return false;
                }
            }
            return true;
        }

        document.getElementById('family_members').addEventListener('change', function() {
            var numFamilyMembers = parseInt(this.value);
            var familyMembersFields = document.getElementById('family_members_fields').children;
            
            // Hide all family member fields
            for (var i = 0; i < familyMembersFields.length; i++) {
                familyMembersFields[i].classList.add('hidden');
            }

            // Show family member fields based on selection
            for (var i = 0; i < numFamilyMembers; i++) {
                familyMembersFields[i].classList.remove('hidden');
            }
        });
    </script>
</body>
