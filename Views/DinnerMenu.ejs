<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dinner Menu</title>
    <style>
        /* Add your CSS styles here */
        body {
            font-family: Arial, sans-serif;
            text-align: center;
        }
        .card {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            margin: 10px;
            display: inline-block;
            width: 200px;
        }
        h2 {
            color: #4CAF50;
        }
        p {
            color: #333;
        }
        .vote-btn {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .add-item-form {
            margin-top: 20px;
        }
        .add-item-form input[type="text"] {
            width: 200px;
            padding: 5px;
            margin: 5px;
        }
        .add-item-form button {
            background-color: #4CAF50;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        /* Style for header */
        header {
            background-color: #333;
            color: white;
            padding: 10px;
            text-align: center;
        }
        header button {
            background-color: #555;
            color: white;
            padding: 5px 10px;
            margin: 0 10px;
            border: none;
            cursor: pointer;
        }
        /* Style for hovering division */
        .farewell-registration {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #ddd;
            padding: 20px;
            border-radius: 10px;
            display: none;
        }
        .farewell-registration:hover {
            display: block;
        }
    </style>
    <header>
        <form action="/home" method="get">
            <button type="submit">Home</button>
        </form>
    </header>
</head>
<body>
    <!-- Form to add new dinner items -->
    <div class="add-item-form">
        <form action="/addDinnerItem" method="post">
            <input type="text" name="itemName" placeholder="Enter item name" required>
            <input type="text" name="itemDescription" placeholder="Enter item description" required>
            <button type="submit">Add Item</button>
        </form>
    </div>
    <h1>Dinner Menu</h1>
    <% dinnerItems.forEach(item => { %>
        <div class="card">
            <h2><%= item.Name %></h2>
            <p><%= item.Description %></p>
            <p>Total Votes: <%= item.TotalVotes %></p>
            <form action="/dinnerVote" method="post">
                <input type="hidden" name="itemId" value="<%= item.ItemId %>">
                <button type="submit" class="vote-btn">Vote</button>
            </form>
        </div>
    <% }); %>

</body>
</html>
